
<% include ../shared/header.ejs%>
<h1>Car Details</h1>
<form method="post">
    <fieldset class="form-group">
        <label class="control-label col-md-2" for="make">Make*: </label>
        <input name="make" id="make" value="<%= car.make %>"required />
    </fieldset>
    <fieldset class="form-group">
        <label class="control-label col-md-2" for="model">Model*: </label>
        <input name="model" id="model" value="<%= car.model%>" required />
    </fieldset>
    <fieldset class="form-group">
        <label class="control-label col-md-2" for="year">Year*: </label>
        <input  type="number" min="1900" name="year" id="year" value="<%= car.year%>" required />
    </fieldset><fieldset class="form-group">
        <label class="control-label col-md-2" for="color">Color: </label>
        <input name="color" id="color" value="<%= car.color%>" required />
    </fieldset>
    <button class="offset-2 btn btn-primary">Save</button>
</form>

<% include ../shared/footer.ejs%>