<% include ../shared/header.ejs%>
<h1>Car Details</h1>
<form action="../cars/add" method="post">
    <fieldset class="form-group">
        <label class="control-label col-md-2" for="make">Make*: </label>
        <input name="make" id="make" required />
    </fieldset>
    <fieldset class="form-group">
        <label class="control-label col-md-2" for="model">Model*: </label>
        <input name="model" id="model" required />
    </fieldset>
    <fieldset class="form-group">
        <label class="control-label col-md-2" for="year">Year*: </label>
        <input  type="number" min="1900" name="year" id="year" required />
    </fieldset><fieldset class="form-group">
        <label class="control-label col-md-2" for="color">Color: </label>
        <input name="color" id="color" required />
    </fieldset>
    <button class="offset-2 btn btn-primary">Save</button>
</form>

