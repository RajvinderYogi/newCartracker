
<% include ../shared/header.ejs%>
<h1>Update Manufacturer Details</h1>
<form method="post">
    <fieldset class="form-group">
        <label class="control-label col-md-2" for="name">Name*: </label>
        <input name="name" id="name" value="<%= make.name%>" required />
    </fieldset>
    <fieldset class="form-group">
        <label class="control-label col-md-2" for="country">Country*: </label>
        <input name="country" id="country" value="<%= make.country%>" required />
    </fieldset>
    <fieldset class="form-group">
        <label class="control-label col-md-2" for="yearFounded">Year Founded*: </label>
        <input  type="number" min="1800" name="yearFounded" id="yearFounded" value="<%= make.yearFounded%>" required />
    </fieldset>
    <button class="offset-2 btn btn-primary col-md-1">Update</button>
</form>

<% include ../shared/footer.ejs%>